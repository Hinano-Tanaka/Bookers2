<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1">

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class ="d-flex flex-column vh-100">
    <header class="bg-dark text-white pt-5 pb-4">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <div class="collapse navbar-collapse ">
            <ul class="navbar-nav ml-auto">
              <li>
                <%= link_to "Bookers", root_path %>
              </li>
              <li class="nav-item">
                <%= link_to "Home", root_path, class: 'nav-link text-light'%>
              </li>
              <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to "Users", users_path, class: 'nav-link text-light'%>
                </li>
                <li class="nav-item">
                  <%= link_to "Books", books_path, class: 'nav-link text-light'%>
                </li>
                <li class="nav-item">
                  <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light'%>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light'%>
                </li>
                <li class="nav-item">
                  <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light'%>
                </li>
                <li class="nav-item">
                  <%= link_to "About", homes_about_path, class: 'nav-link text-light'%>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer>
      <div class="col-lg-8">
        <p style="text-align:center">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
