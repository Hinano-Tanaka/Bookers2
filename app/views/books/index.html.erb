<h1>Books#index</h1>



<!------------------------------------------------------------------->

<h2>New Book</h2>
  <%= form_with model: @book, local:true do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

<!------------------------------------------------------------------->


<h1>Books</h1>

<table cellpadding = "5">
  <thead>
    <tr>
      <th align="center">Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
