<div class="container px-5 px-sm-0 mt-4">
  <div class="row">
    <div class="col-md-3">

      <% if @new_book.errors.any? %>
        <p class ="text-danger"><%= @new_book.errors.count %> errors prohibited this book from being saved:</p>
        <ul>
          <% @new_book.errors.full_messages.each do |message| %>
            <li class ="text-danger"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
  <!------------------------------------------------------------------->
      <%= render 'users/userinfo', new_book: @new_book, user: @user %>
  <!------------------------------------------------------------------->
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover" cellpadding = "5">
        <thead>
          <tr>
            <th></th>
            <th align="center">Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image("40x40") %>
                <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>