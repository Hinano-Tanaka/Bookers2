<div class="container px-5 px-sm-0 mt-4">
  <div class="row">
    <div class="col-md-3">
      <!------------------------------------------------------------------->
      <h2>New Book</h2>
        <%= form_with model: @book, local:true do |f| %>
          <p>Title</p>
            <%= f.text_field :title %>
          <p>Opinion</p>
            <%= f.text_area :body %>
          <div class="actions mt-3">
              <input type="submit" name="commit" value="Create Book" class="btn btn-success">
          </div>
        <% end %>
  <!------------------------------------------------------------------->
    </div>
    <div class="col-md-8">
      <h2>Books#index</h2>
      <table cellpadding = "5">
        <thead>
          <tr>
            <th align="center">Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>