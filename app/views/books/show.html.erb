<div class="row mt-3">
  <div class="col-md-3">
    <%= render 'users/userinfo', new_book: @new_book, user: @user %>
  </div>
  <!---------------------------------------------->
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image("40x40") %>
              <br>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book) %>
            
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user_id == current_user.id %>
              <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %>
            <% end %>
            </td>
          <td>
            <% if @book.user_id == current_user.id %>
              <%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？'}, class: "btn btn-danger" %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

