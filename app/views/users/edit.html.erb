<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mt-4">User info</h2>
    <%= form_with model: @user, local:true do |f| %>

      <div class="form-group mb-2">
        <p>Name</p>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="form-group mb-2">
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class="form-group mb-2">
        <p>Introduction</p>
        <%= f.text_area :introduction, :size => "40x2" %>
      </div>

      <div class="actions">
        <input type="submit" name="commit" value="Update User" class="btn btn-secondary">
      </div>
    <% end %>
  </div>
</div>

