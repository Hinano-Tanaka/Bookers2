<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2 class="mt-4">User info</h2>

    <% if @user.errors.any? %>
      <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>


    <%= form_with model: @user, method: :patch, local:true do |f| %>
      <div class="form-group mb-2">
        <p>Name</p>
        <%= f.text_field :name, autofocus: true %>
      </div>

      <div class="form-group mb-2">
        <p>Image</p>
        <%= f.file_field :profile_image, accept: "image/*" %>
      </div>

      <div class="form-group mb-2">
        <p>Introduction</p>
        <%= f.text_area :introduction, :size => "40x2" %>
      </div>
      <div class="actions">
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

