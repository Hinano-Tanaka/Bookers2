<h1>User Info</h1>
<%= form_with model: @user, local:true do |f| %>
  <h4>Name</h4>
    <%= f.text_field :name, autofocus: true %>
  <h4>ProfileImage</h4>
    <%= f.file_field :profile_image, accept: "image/*" %>
  <h4>Introduction</h4>
    <%= f.text_area :introduction %>
  <%= f.submit "Update User" %>
<% end %>
