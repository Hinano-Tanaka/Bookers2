<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-8">
      <h1 class="mt-2">Users</h1>

      <table class="table table-striped", cellpadding = "5">
        <thead>
          <tr>
            <th align="center">image</th>
            <th>name</th>
            <th colspan ="1"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <% if user.image.attached? %>
                    <%= image_tag user.image, size: "40x40" %>
                <% else %>
                    <%= image_tag 'no_image.jpg', size: "40x40" %>
                <% end %>
              </td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", book_path(user.id)%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>