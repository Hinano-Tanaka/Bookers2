<h2 class="mt-4">New Book</h2>
<%= form_with model: book, method: :post, local:true do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :body %>
  <div class="actions mt-3">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success">
  </div>
<% end %>

