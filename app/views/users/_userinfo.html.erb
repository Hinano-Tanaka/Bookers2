<h2>User info</h2>
<div>
  <%= image_tag user.get_profile_image("63x63") %>
  <table class="table">
    <tbody>
      <tr>
        <th class="p-3">name</th><td><%= user.name %></td>
      </tr>
      <tr>
        <th class="p-3">introduction</th><td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>
  <% if !(user.name == "guestuser") %>
    <div class="row">
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block ml-3 px-5" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
  <% end %>
</div>

