<h2 class="mt-4">New book</h2>

<% if @new_book.errors.any? %>
  <p><%= @new_book.errors.count %> errors prohibited this book from being saved:</p>
  <ul>
    <% @new_book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: new_book, method: :post, local:true do |f| %>
  <p>Title</p>
    <%= f.text_field :title %>
  <p>Opinion</p>
    <%= f.text_area :body %>
  <div class="actions mt-3">
      <input type="submit" name="commit" value="Create Book" class="btn btn-success">
  </div>
<% end %>